<Window x:Class="RobotInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="Emission" Header="GroupBox" Grid.Row="1" BorderBrush="Black" Background="#FFDDDDDD" Grid.Column="1">
            <TextBox x:Name="TextBoxEmission" TextWrapping="Wrap" Text="" TextChanged="TextBoxEmission_TextChanged" AcceptsReturn="True" KeyUp="TextBoxEmission_KeyUp"/>
        </GroupBox>
        <GroupBox x:Name="Reception" Header="GroupBox" Grid.Row="1" Background="#FFDDDDDD" BorderBrush="Black" Grid.Column="3">
            <TextBox x:Name="TextBoxReception" TextWrapping="Wrap" Text="" Width="339" AcceptsReturn="True" IsReadOnly="True"/>
        </GroupBox>
        <Button x:Name="ButtonEnvoyer" Grid.Column="1" Content="Envoyer" Grid.Row="3" Width="100" Click="ButtonEnvoyer_Click"/>
        <Button x:Name="ButtonClear" Grid.Column="3" Content="Clear" Grid.Row="3" Click="ButtonClear_Click" Margin="127,0,128,0"/>
        <Button x:Name="ButtonTest" Grid.Column="1" Content="Test" Grid.Row="3" Click="ButtonTest_Click" Margin="320,0,320,0" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
